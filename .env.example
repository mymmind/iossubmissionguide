# =============================================================================
# iOS Submission Guide - Environment Configuration
# =============================================================================
# Copy this file to .env.local for local development
# For production, set these as environment variables on your server
# =============================================================================

# Database (Required)
DATABASE_URL="postgresql://user:password@localhost:5432/appstore_guides"

# Stripe (Required)
# Use test keys for development, live keys for production
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_PUBLISHABLE_KEY="pk_test_..."
# Webhook secret for production (get from Stripe Dashboard)
# STRIPE_WEBHOOK_SECRET="whsec_..."

# Admin Panel Authentication (Required)
ADMIN_EMAIL="admin@example.com"
ADMIN_PASSWORD="your-secure-password-here"

# Session Security (Required - must be at least 32 characters)
SESSION_SECRET="generate-with-openssl-rand-base64-32"

# URLs
FRONTEND_URL="http://localhost:4321"
BACKEND_URL="http://localhost:3005"
SITE_URL="http://localhost:4321"

# Server Configuration
PORT=3005
NODE_ENV="development"

# Analytics (Umami - optional)
PUBLIC_UMAMI_WEBSITE_ID=""
