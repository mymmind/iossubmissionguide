---
import { getAlternatePath, type Language } from '../i18n/translations';

interface Props {
  lang: Language;
  pathname: string;
}

const { lang, pathname } = Astro.props;

const alternateLang = lang === 'en' ? 'zh' : 'en';
const alternatePath = getAlternatePath(pathname, alternateLang);

const languageNames: Record<Language, string> = {
  en: 'EN',
  zh: '中文'
};
---

<div class="language-switcher">
  <a
    href={alternatePath}
    class="flex items-center gap-1.5 text-xs font-medium px-2 py-1 rounded-md transition-colors hover:bg-[var(--bg-tertiary)]"
    style="color: var(--text-secondary);"
    aria-label={`Switch to ${alternateLang === 'zh' ? 'Chinese' : 'English'}`}
  >
    <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
    </svg>
    <span>{languageNames[alternateLang]}</span>
  </a>
</div>
