---
import Layout from '../../layouts/Layout.astro';

const title = "服务条款 - iOS 提交指南";
const description = "iOS 提交指南的服务条款。阅读我们关于使用网站和购买产品的条款和条件。";

const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "首页",
      "item": "https://iossubmissionguide.com/zh"
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "服务条款",
      "item": "https://iossubmissionguide.com/zh/terms"
    }
  ]
};
---

<Layout title={title} description={description} lang="zh">
